extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Name' name='name' required='true' value=(undefined===developer ? '' : developer.name) )
    div.form-group
      label(for='date_established') Date of establishment:
      input#date_established.form-control(type='date' name='date_established' value=(undefined===developer ? '' : developer.date_established) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg